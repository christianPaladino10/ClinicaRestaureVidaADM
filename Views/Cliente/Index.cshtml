@model AdminRestaureVida.ViewModel.ClienteViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Cliente</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Cliente", "Create")
</p>

<hr />

@using (Html.BeginForm("BuscarCliente", "Cliente", FormMethod.Get))
{
    <div class="form-inline">
        <div class="form-group">
            <input type="text" name="nome" class="form-control" placeholder="Buscar Cliente" />
        </div>
        <input type="submit" value="Buscar" class="btn btn-default" />
    </div>
}

<br />

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PaginatedClientes())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @{
                    string parameterValue = item.DataNascimento.Value.ToShortDateString();
                    if (parameterValue == "01/01/0001")
                    {
                        parameterValue = string.Empty;
                    }
                }
                @Html.DisplayFor(modelItem => parameterValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>

                <a href="/Cliente/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="/Cliente/Details/@item.Id" data-toggle="tooltip" data-placement="top" title="Ver Detalhes"><span class="glyphicon glyphicon-eye-open" aria-hidden="true" style="color:black"></span></a>
                @*<a href="/Cliente/Delete/@item.Id" data-toggle="tooltip" data-target="#myModal" data-placement="top" title="Deletar"><span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red"></span></a>*@

                <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal_@item.Id">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red"></span>
                </button>

                <div class="modal fade" id="myModal_@item.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Deletar</h4>
                            </div>
                            <div class="modal-body">
                                <p>Tem certeza que gostaria de deletar esse item?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                <a class="btn btn-danger" href="/Cliente/Delete/@item.Id" role="button">Deletar</a>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                @* @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |*@
                @*@Html.ActionLink("Ver Detalhes", "Details", new { id = item.Id }) |*@
                @*@Html.ActionLink("Deletar", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>

<ul class="pagination">
    @for (int i = 1; i <= Model.PageCount(); i++)
    {
        <li class="@(i == Model.CurrentPage ? "page-item active" : "page-item")">
            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
        </li>
    }
</ul>

<br />

<a href="/Cliente/Index"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&nbsp;Voltar</a>

@{
    var message = TempData["MensagemSucesso"] ?? string.Empty;
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Cadastro</h4>
            </div>
            <div class="modal-body">
                <p>@message</p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    var message = '@message';
    if(message)
        $('#myModal').modal('show')
</script>


