@model List<AdminRestaureVida.Models.Consulta>

@{
    ViewBag.Title = "Historico";
}

<h2>Histórico de Consultas</h2>
<hr />
<br />

<table class="table table-bordered">
    <tr>
        <th></th>
        <th>
            Data Consulta
        </th>
        <th>
            Histórico
        </th>
    </tr>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <tr>
            <td>
                @{
                    int sequencia = i + 1;
                }
                @Html.DisplayFor(modelItem => sequencia)
            </td>
            <td>
                @Model[i].DataCriacao
            </td>
            <td>
                <a href="/Consulta/Edit/@Model[i].Id" data-toggle="tooltip" data-placement="top" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                @*<a href="/Consulta/Delete/@Model[i].Id" data-toggle="tooltip" data-placement="top" title="Deletar"><span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red"></span></a>*@

                <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal_@Model[i].Id">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red"></span>
                </button>

                <div class="modal fade" id="myModal_@Model[i].Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Deletar</h4>
                            </div>
                            <div class="modal-body">
                                <p>Tem certeza que gostaria de deletar esse item?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                <a class="btn btn-danger" href="/Consulta/Delete/@Model[i].Id" role="button">Deletar</a>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </td>
        </tr>
    }
</table>

<a href="/Consulta/Index"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&nbsp;Voltar</a>

@{
    var message = TempData["MensagemSucesso"] ?? string.Empty;
}

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Cadastro</h4>
            </div>
            <div class="modal-body">
                <p>@message</p>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<script type="text/javascript">
    var message = '@message';
    if(message)
        $('#myModal').modal('show')
</script>