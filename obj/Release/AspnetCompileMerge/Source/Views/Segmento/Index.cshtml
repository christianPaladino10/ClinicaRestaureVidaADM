@model IEnumerable<AdminRestaureVida.Models.Segmento>

@{
    ViewBag.Title = "Index";
}

<h2>Segmento</h2>

<p>
    @Html.ActionLink("Criar Novo Segmento", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            <a href="/Segmento/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            <a href="/Segmento/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Deletar"><span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:red"></span></a>
        </td>
    </tr>
}

</table>
